                                DockPanel.Dock="Top"
                                FontSize="16"
                                FontWeight="Bold" Margin="4,4,4,0" />

                            <TextBox
                                x:Name="TextBoxBreak"
                                HorizontalContentAlignment="Center"
                                Background="White"
                                BorderBrush="Gray"
                                BorderThickness="1,1,1,0"
