<Window x:Name="WindowMyMessageBox" x:Class="MyCpu1805_05.CHelpBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCpu1805_05"
        mc:Ignorable="d"
        Title="HelpBox" Height="1080" Width="640" Topmost="True">
    <StackPanel Margin="10,10,10,10" Background="LightGreen">
        <Label x:Name="LabelTitle" Content="Title" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Bold" Background="LightGray" Margin="0,0,0,20"/>
        <TextBlock x:Name="TextBlock_Message" Text="abcdef\nzzz" TextWrapping="Wrap" FontSize="14" Margin="10,5,10,0" MinHeight="40"/>
        <Image x:Name="ImageBig"  Margin="5,5,5,5" />
        

    </StackPanel>
</Window>
