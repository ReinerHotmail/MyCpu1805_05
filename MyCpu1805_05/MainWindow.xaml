<Window x:Name="WindowCpu1805Main" x:Class="MyCpu1805_05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCpu1805_05"
        mc:Ignorable="d"
        Title="MyCpu1805_05" Height="1000" Width="1700" Loaded="WindowCpu1805Main_Loaded" Closing="WindowCpu1805Main_Closing">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2">
            <TabItem Header="CPU and Programming">
                <Grid
                    x:Name="GridTab1Cpu"
                    Margin="4"
                    Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="121*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="241*" />
                        <RowDefinition Height="299*" />
                        <RowDefinition Height="86*" />
                        <RowDefinition Height="0*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="421*" />
