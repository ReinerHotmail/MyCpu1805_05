                        <ColumnDefinition Width="161*"/>
                        <ColumnDefinition Width="126*" />
                        <ColumnDefinition Width="234*" />
                        <ColumnDefinition Width="276*" />
                        <ColumnDefinition Width="207*" />
                    </Grid.ColumnDefinitions>

                    <!--  OpCodeLis t  -->
                    <DockPanel
                        x:Name="DocPanelOpCodeList"
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="1"
                        Margin="4,4,4,4" Background="LightGray">
                        <Label
                            Margin="1"
                            HorizontalContentAlignment="Center"
                            Background="White"
                            BorderBrush="Gray"
                            BorderThickness="1,1,1,0"
                            Content="OpCode-List"
                            DockPanel.Dock="Top"
                            FontSize="16"
                            FontWeight="Bold" />
                        <Grid Margin="1" DockPanel.Dock="Top">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                x:Name="TextBoxOpCodeInfo"
                                FontSize="12"
                                FontWeight="Bold"
                                Text=" " Background="LightBlue" />
                                <Button x:Name="ButtonListViewOpCodeStandard"   Grid.Column="1" ToolTip="Info Clear" Content="Standard" Click="ButtonListViewOpCodeStandard_Click"/>

                            </Grid>

                            <ListBox x:Name="ListBoxOpCodeInfo" Grid.Row="1" Background="LightBlue" />

                        </Grid>
                        <ListView
                            x:Name="ListViewOpCode"
                            Margin="1"
                            MouseLeftButtonUp="ListViewOpCode_MouseLeftButtonUp" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Visible" Loaded="ListViewOpCode_Loaded">

                            <ListView.View>
                                <GridView>

                                    <GridViewColumn x:Name="GridViewColumn0ListViewOpCode" Width="60" DisplayMemberBinding="{Binding Syntax}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="ListViewOpCodeColumnHeader_Click" Tag="Syntax">Syntax</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="GridViewColumn1ListViewOpCode" Width="40" DisplayMemberBinding="{Binding Hex}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="ListViewOpCodeColumnHeader_Click" Tag="Hex">Hex</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="GridViewColumn2ListViewOpCode" Width="40" DisplayMemberBinding="{Binding Bytes}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="ListViewOpCodeColumnHeader_Click" Tag="Bytes">Bytes</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="GridViewColumn3ListViewOpCode" Width="40" DisplayMemberBinding="{Binding Register}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="ListViewOpCodeColumnHeader_Click" Tag="Register">Register</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="GridViewColumn4ListViewOpCode" Width="300" DisplayMemberBinding="{Binding Long}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="ListViewOpCodeColumnHeader_Click" Tag="Long">Long</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="GridViewColumn5ListViewOpCode" DisplayMemberBinding="{Binding Info}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="ListViewOpCodeColumnHeader_Click" Tag="Info">Info</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="GridViewColumn6ListViewOpCode" DisplayMemberBinding="{Binding SignNextByte}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="ListViewOpCodeColumnHeader_Click" Tag="SignNextByte">Sign</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn x:Name="GridViewColumn7ListViewOpCode" DisplayMemberBinding="{Binding Singles}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Click="ListViewOpCodeColumnHeader_Click" Tag="Singles">Singles</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn x:Name="GridViewColumn8ListViewOpCode" DisplayMemberBinding="{Binding OrderByFunction}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader  x:Name="ListViewOpCodeColumnHeaderStandard"  Click="ListViewOpCodeColumnHeader_Click" Tag="OrderByFunction">ObF</GridViewColumnHeader>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                </GridView>
                            </ListView.View>
                        </ListView>

                    </DockPanel>

                    <!--  LineSyntax  -->
