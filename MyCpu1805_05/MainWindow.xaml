                    <Grid Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="1" Background="LightGray" Margin="4,4,4,4" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="20*"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="10*"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Content="Programm-List" Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Center" Padding="5,0,5,0" HorizontalContentAlignment="Center" FontWeight="Bold" BorderThickness="0,0,0,0" />
                        <ListView 
                                Grid.Row="1" Grid.Column="0"
                                x:Name="ListViewProg"
                                PreviewMouseLeftButtonUp="ListViewProg_PreviewMouseLeftButtonUp" BorderThickness="1,1,1,1">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn x:Name="GridViewColumn0ListViewProg" Header="Prog" Width="140"  DisplayMemberBinding="{Binding ProgName}" />
                                    <GridViewColumn Header="Adr" Width="40" DisplayMemberBinding="{Binding Adr}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Label Content="Jump-List" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" Padding="5,0,5,0" VerticalContentAlignment="Stretch" FontWeight="Bold" />
                        <ListView Grid.Row="1" Grid.Column="1"
                                x:Name="ListViewJump"
                                PreviewMouseLeftButtonUp="ListViewJump_PreviewMouseLeftButtonUp">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn x:Name="GridViewColumn0ListViewJump" Header="Prog" Width="70" DisplayMemberBinding="{Binding ProgName}" />
                                    <GridViewColumn x:Name="GridViewColumn1ListViewJump" Header="Jump" Width="70" DisplayMemberBinding="{Binding JumpName}" />
                                    <GridViewColumn x:Name="GridViewColumn2ListViewJump" Header="Adr" Width="40" DisplayMemberBinding="{Binding Adr}" />
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <Label Content="Break-/Log-Points" Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Center" Padding="5,0,5,0" VerticalContentAlignment="Stretch" FontWeight="Bold" />
                        <ListView Grid.Row="3" Grid.Column="1"
                                x:Name="ListViewBreakpoints" PreviewMouseLeftButtonUp="ListViewBreakpoints_PreviewMouseLeftButtonUp">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn  Header="Typ" Width="30" DisplayMemberBinding="{Binding Typ}" />
                                    <GridViewColumn  Header="Adr" Width="40" DisplayMemberBinding="{Binding AdrHex}" />
                                    <GridViewColumn  Header="Condition" Width="80" DisplayMemberBinding="{Binding Condition}" />
                                    <GridViewColumn  Header="LogItem" Width="180" DisplayMemberBinding="{Binding LogItems}" />
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <Label Content="Replace-List" Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Center" Padding="5,0,5,0" VerticalContentAlignment="Stretch" FontWeight="Bold" />
                        <ListView Grid.Row="3" Grid.Column="0"
                                x:Name="ListViewReplace">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn x:Name="GridViewColumn0ListViewReplace" Header="NickName" Width="80" DisplayMemberBinding="{Binding NickName}" />
                                    <GridViewColumn x:Name="GridViewColumn1ListViewReplace" Header="Name" Width="80" DisplayMemberBinding="{Binding Name}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Label x:Name="LabelLineInfoTitle" Content="Line-Info" Grid.Row="4" Grid.ColumnSpan="2" Padding="5,0,9,0" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center" FontWeight="Bold"/>

                        <TextBox x:Name="TextBoxLineInfo"  Grid.Row="5"  Grid.RowSpan="3"    Grid.ColumnSpan="2" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" FontFamily="Courier New" Visibility="Hidden"/>
                        <StackPanel x:Name="StackPanelBreakLog" Orientation="Vertical" Background="Orange" Grid.Row="5"  Grid.RowSpan="3"    Grid.Column="1" Visibility="Visible">

                            <Label Content=" "/>
                            <RadioButton x:Name="RadioButtonBreakpoint" Content="Break-Point" IsChecked="True" Margin="10,0,0,0"/>
                            <RadioButton x:Name="RadioButtonLogpoint" Content="Log-Point" Margin="10,0,0,0"/>

                            <Label Content=" "/>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="ButtonBreakLogOk" Content="   OK    " Click="ButtonBreakLogOk_Click" Margin="20,-1,0,0"/>
                                <Button x:Name="ButtonBreakLogCancel" Content="Cancel" Click="ButtonBreakLogCancel_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <!--</Border>-->

                    <!--  PanelButtons / Editor / Lines / Mem  -->
                    <Grid x:Name="GridEditor"
                        Grid.Row="3"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                   
                        Background="LightGray" Margin="4,4,4,4" Height="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35*" />
                            <ColumnDefinition Width="160*" />
                            <ColumnDefinition Width="45*" />

                        </Grid.ColumnDefinitions>
                        <!--  MemNew  -->
                        <DockPanel x:Name="DocPanelMemNew" Grid.Row="0" Grid.Column="2" Margin="4,4,12,4">
                            <Label
                                x:Name="LabelMem"
                              
                                HorizontalContentAlignment="Center"
                                Background="White"
                                BorderBrush="Gray"
                                BorderThickness="1,1,1,0"
