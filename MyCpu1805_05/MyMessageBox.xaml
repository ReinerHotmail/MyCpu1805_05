<Window x:Name="WindowMyMessageBox" x:Class="MyCpu1805_05.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCpu1805_05"
        mc:Ignorable="d"
        Title="MyMessageBox" Height="286" Width="400" Loaded="WindowMyMessageBox_Loaded">
    <StackPanel>
        <Label x:Name="LabelTitle" Content="Title" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Bold" Background="LightGray" Margin="0,0,0,20"/>
        <TextBlock x:Name="TextBlock_Message" Text="abcdef\nzzz" TextWrapping="Wrap" FontSize="14" Margin="10,5,10,10" MinHeight="100"/>
        <Image x:Name="ImageBig"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            
            <Button x:Name="OK" Content="   OK   " FontSize="16" MinHeight="30" MinWidth="80" Margin="0,0,20,0"/>
         
            <Button x:Name="o" Content="   C   " FontSize="16" MinHeight="30" MinWidth="80" Margin="20,0,0,0" />
        </StackPanel>

    </StackPanel>
</Window>
