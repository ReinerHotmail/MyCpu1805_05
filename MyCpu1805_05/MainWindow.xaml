                                x:Name="TextBoxBreak2"
                                HorizontalContentAlignment="Center"
                                BorderBrush="Gray"
                                BorderThickness="1,1,1,0"
                                Text="PXdQ&#10;01234567&#10;89ABCDEF&#10;IOe"
                                DockPanel.Dock="Top"
                                FontSize="16"
                                Margin="4,4,4,0" ToolTip="Parameter für LogFile-Aufzeichnung&#10;jeder Buchstabe steht für entsprechendes CPU-Register&#10; d=AccuD  Q=Q   I=INP1-7 O=OUT1-7 e=EF1-EF4" AcceptsReturn="True" />
                            <Button
                                x:Name="ButtonRecordAll"                           
                                HorizontalContentAlignment="Center"
                                BorderThickness="1,1,1,0"
                                Content="Record All"
                                DockPanel.Dock="Top"
                                FontSize="16"
                               Margin="4,4,4,0" Click="ButtonRecordAll_Click" />
                            <Button
                                x:Name="ButtonBreakpointYes"                           
                                HorizontalContentAlignment="Center"
                                BorderThickness="1,1,1,0"
                                Content="Ok"
                                DockPanel.Dock="Top"
                                FontSize="16"
                               Margin="4,4,4,0" Click="ButtonBreakpointYes_Click" Background="Orange" />
                            <Button
                                x:Name="ButtonBreakpointNo"
                                HorizontalContentAlignment="Center"
                                BorderThickness="1,1,1,0"
                                Content="Cancel"
                                DockPanel.Dock="Top"
                                FontSize="16"
                                Margin="4,4,4,0" Click="ButtonBreakpointNo_Click" />
                       
                            <ListView Margin="4" x:Name="ListViewMem"
                                PreviewMouseLeftButtonUp="ListViewMem_PreviewMouseLeftButtonUp"
                                PreviewMouseRightButtonUp="ListViewMem_PreviewMouseRightButtonUp" ScrollViewer.HorizontalScrollBarVisibility="Auto" ToolTip="Linksklick: Programmzeile  zeigen -  Rechtsklick: Break-/Logpoint  setzen">

                                <ListView.ItemTemplate >
                                    <DataTemplate>
                                        <WrapPanel>
                                            <!--<TextBlock Text="Name: " />-->
                                            <TextBlock Text="{Binding Adr}" Background="{Binding AdrBrush}" />
                                            <TextBlock Text="  " />
                                            <!--<TextBlock Text="Age: " />-->
                                            <TextBlock Text="{Binding Data}"  Background="{Binding DataBrush}" />
                                            <TextBlock Text=" " />
                                            <TextBlock Text="{Binding Break}"   />
                                            <!--<TextBlock Text=")" />-->

                                        </WrapPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </DockPanel>

                        <!--  PanelButtons  -->
                        <StackPanel Background="Gray" Margin="4,4,4,4" >
                            <Button
                                        x:Name="ButtonFileNew"
                                        Margin="3,3,3,3"
                                        Click="ButtonFileNew_Click"
                                        Content="New File"
                                        FontSize="14"
                                        ToolTip="erste Programmzeile erstellen" />
                            <TextBox x:Name="TextBoxNewFileName"  Margin="3,3,3,3" Text="Prog01" VerticalContentAlignment="Center" FontSize="14" MouseEnter="TextBoxNewFileName_MouseEnter" />
                            <Label
                                    HorizontalContentAlignment="Center"
                                    Background="LightGray"
                                    Content=""
                                    FontSize="6"
                                    FontWeight="Bold" />
                            <Button
                                        x:Name="ButtonLoadProgr"
                                        Margin="3"
                                        Click="ButtonLoadProgr_Click"
                                        Content="RCA-File Load"
                                        FontSize="14"
                                        ToolTip="RCA-File in Editor laden" />
                            <Button
                                        x:Name="ButtonSaveProgr"
                                        Margin="3"
                                        Click="ButtonSaveProgr_Click"
                                        Content="RCA-File Save"
                                        FontSize="14"
                                        ToolTip="RCA-File speichern" />
                            <Label
                                    HorizontalContentAlignment="Center"
                                   Background="LightGray"
                                    Content=""
                                    FontSize="6"
                                    FontWeight="Bold" />
                            <Button
                                        x:Name="ButtonLoadHex"
                                        Margin="3"
                                        Click="ButtonLoadHex_Click"
                                        Content="Hex-File Load"
                                        FontSize="14"
                                        ToolTip="Hex-File in Editor laden" />
                            <Button
                                        x:Name="ButtonLoadClipboard"
                                        Margin="3"
                                        Click="ButtonLoadClipboard_Click"
                                        Content="File -&gt; Clipb."
                                        FontSize="14"
                                        ToolTip="RCA-File in Zwischenspeicher laden - zum Einfügen an Cursorposition" />

                            <Label

                                    HorizontalContentAlignment="Center"
                                   Background="LightGray"
                                    Content=""
                                    FontSize="6"
                                    FontWeight="Bold" />


                            <Button
                                        x:Name="ButtonEditorFind"
                                        Margin="3"
                                        Click="ButtonEditorFind_Click"
                                        Content="Find String"
                                        FontFamily="Segoe UI"
                                        FontSize="14"
                                        ToolTip="Suche -  Start am Anfang" />
                            <TextBox
                                        x:Name="TexBoxEditorFind"
                                        Margin="3"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        FontFamily="Courier New"
                                        FontSize="16"
                                        KeyUp="TexBoxEditorFind_KeyUp"
                                        Text=""
                                        TextWrapping="NoWrap"
                                        ToolTip="Suchbegriff eingeben" />
                            <Button
